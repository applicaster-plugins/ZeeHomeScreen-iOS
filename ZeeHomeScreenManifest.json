{
  "api": {
    "class_name": "ZeeHomeScreenMain",
    "modules": [
      "ZeeHomeScreen"
    ],
    "require_startup_execution": true
  },
  "dependency_repository_url": [
    "git@github.com:applicaster-plugins/ZeeHomeScreen-iOS.git"
  ],
  "platform": "ios",
  "author_name": "Evgenii Kyivskyi",
  "author_email": "e.kyivskyi@applicaster.com",
  "manifest_version": "3.1.15",
  "name": "Zee5HomeScreen",
  "description": "Zee5 Home Screen",
  "type": "general",
  "screen": true,
  "identifier": "zee5_home_screen",
  "ui_builder_support": true,
  "dependency_name": "ZeeHomeScreen",
  "dependency_version": "3.1.15",
  "whitelisted_account_ids": [
    "5cb825e102507200087bbdcc",
    "5c3b12762756be0008779106"
  ],
  "min_zapp_sdk": "14.1.9",
  "deprecated_since_zapp_sdk": "",
  "unsupported_since_zapp_sdk": "",
  "supported_nav_items": [],
  "react_native": false,
  "data": {
    "fields": [
      {
        "key": "source",
        "type": "select"
      },
      {
        "key": "type",
        "type": "select"
      }
    ]
  },
  "general": {
    "fields": [
      {
        "key": "list_divider",
        "type": "text_input",
        "placeholder": "10",
        "initial_value": "10"
      },
      {
        "key": "nav_bar_id",
        "type": "nav_bar_selector",
        "label": "Navigation Bar",
        "placeholder": "Choose Nav Bar"
      },
      {
        "key": "padding_horizontal",
        "type": "text_input",
        "placeholder": "10",
        "initial_value": "10"
      },
      {
        "key": "padding_top",
        "type": "text_input",
        "placeholder": "0",
        "initial_value": "0"
      },
      {
        "key": "padding_bottom",
        "type": "text_input",
        "placeholder": "10",
        "initial_value": "10"
      },
      {
        "key": "numberOfComponentsToLoad",
        "type": "text_input",
        "placeholder": "6",
        "initial_value": "6",
        "label_tooltip": "Max component that need to be load each time."
      },
      {
        "key": "componentsThresholdIndex",
        "type": "text_input",
        "placeholder": "3",
        "initial_value": "3",
        "label_tooltip": "Represent the max gap between the last visible component to the last compoentn. for example: if the list has 8 componenet the next loadin invoke once the 5 component will be visible."
      },
      {
        "group": true,
        "label": "Screen Type",
        "tooltip": "Choose one of screen type of the home plugin",
        "folded": true,
        "fields": [
          {
            "type": "select",
            "key": "screen_type",
            "multiple": false,
            "options": [
              "DEFAULT",
              "EPG",
              "SEARCH"
            ],
            "initial_value": "DEFAULT",
            "default": "DEFAULT"
          },
          {
            "key": "epg_screen_id",
            "type": "text_input",
            "label": "EPG Screen ID",
            "rules": "conditional",
            "conditional_fields": [
              {
                "key": "general/screen_type",
                "condition_value": "EPG"
              }
            ]
          }
        ]
      }
    ]
  },
  "custom_configuration_fields": [
    {
      "type": "checkbox",
      "key": "should_display_interstitial",
      "tooltip_text": "Display Interstitial",
      "initial_value": 1,
      "default": 1
    },
    {
      "type": "number_input",
      "key": "hero_cell_items_limit",
      "tooltip_text": "Max count of items inside the Hero cell",
      "default": 7
    }
  ],
  "targets": [
    "mobile"
  ]
}
